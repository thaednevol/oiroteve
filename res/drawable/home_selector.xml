<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <bitmap android:gravity="center" android:src="@drawable/home"  />
            </item>
        </layer-list>
    </item>

    <item android:state_selected="false">
        <layer-list>
            <item>
                <bitmap android:gravity="center" android:src="@drawable/profile"/>
            </item>
        </layer-list>
    </item>
    
	<item android:state_selected="true">
        <layer-list>
            <item>
                <bitmap android:gravity="center" android:src="@drawable/calendar"/>
            </item>
        </layer-list>
    </item>
    
</selector>