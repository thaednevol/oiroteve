<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eventorio.app.MainActivity"
    android:background="#efefed" xmlns:android="http://schemas.android.com/apk/res/android">
    
    <com.eventorio.app.utils.MyTextView
        android:id="@+id/tv_profile_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_navigation_previous_item"
        android:layout_alignTop="@+id/iv_navigation_previous_item"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:text="@string/hello_world"
        android:textStyle="bold" />
    
    <!-- <android.support.v4.app.FragmentTabHost 
    <TabHost -->

    <android.support.v4.app.FragmentTabHost
        android:id="@android:id/tabhost"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/tv_profile_hint" >

       <RelativeLayout
           android:layout_width="fill_parent"
           android:layout_height="fill_parent"
           android:background="#f0efee"
           android:orientation="vertical" >

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_above="@android:id/tabs"
                 >

            </FrameLayout>

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal" >
            </TabWidget>


        </RelativeLayout>
      </android.support.v4.app.FragmentTabHost>
        
    <!-- </android.support.v4.app.FragmentTabHost> 
    </TabHost>-->

    <ImageView
        android:id="@+id/iv_navigation_previous_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/navbar_logo" />

</RelativeLayout>
